generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  videos      Video[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Video {
  id           Int           @id @default(autoincrement())
  platform     VideoPlatform
  videoId      String        @unique // YouTube video ID, platform-specific ID
  title        String
  description  String?
  url          String? // Made optional, can be derived or from API
  thumbnailUrl String?
  status       VideoStatus   @default(DRAFT)
  categoryId   Int
  category     Category      @relation(fields: [categoryId], references: [id])
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([categoryId])
}

enum VideoStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// Define VideoPlatform enum
enum VideoPlatform {
  YOUTUBE
  VIMEO
}
