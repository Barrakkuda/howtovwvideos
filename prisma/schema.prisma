generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int                  @id @default(autoincrement())
  name        String               @unique
  description String?
  slug        String?              @unique
  videos      CategoriesOnVideos[]
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
}

model Video {
  id              Int                  @id @default(autoincrement())
  platform        VideoPlatform
  videoId         String               @unique // YouTube video ID, platform-specific ID
  title           String
  description     String?
  url             String? // Made optional, can be derived or from API
  thumbnailUrl    String?
  channelTitle    String?
  channelUrl      String?
  transcript      String? // Added field for video transcript
  status          VideoStatus          @default(DRAFT)
  isHowToVWVideo  Boolean              @default(false)
  categories      CategoriesOnVideos[]
  vwTypes         VWType[]
  tags            String[]
  slug            String?              @unique
  processingError String?
  sourceKeyword   String?
  processedAt     DateTime?
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
}

// New join table for Videos and Categories
model CategoriesOnVideos {
  video      Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  videoId    Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  assignedAt DateTime @default(now())
  assignedBy String? // Example: "user_id" or "system"

  @@id([videoId, categoryId])
}

enum VideoStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  REJECTED
}

// Define VideoPlatform enum
enum VideoPlatform {
  YOUTUBE
  VIMEO
}

// NEW ENUM
enum VWType {
  BEETLE
  GHIA
  THING
  BUS
  OFF_ROAD
  TYPE3
  TYPE4
  ALL
}
